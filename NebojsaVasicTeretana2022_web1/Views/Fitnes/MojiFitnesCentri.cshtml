@model IEnumerable<NebojsaVasicTeretana2022_web1.Models.FitnesCentar>

<head>
    <link rel="stylesheet" href="~/stil.css">
</head>
<h2>Moji Fitnes Centri</h2>
<p>@ViewBag.Greska</p>
<table>
    <tr>
        <th>Naziv</th>
        <th>Adresa</th>
        <th>Godina otvaranja</th>
        <th> </th>

    </tr>
    @foreach (var fc in Model)
    {
        if (!fc.Deleted)
        {
<tr>
    <td>@fc.Naziv</td>
    <td>@fc.Adresa</td>
    <td>@fc.Godina</td>
    <td>
        <form action="~/Fitnes/CentarPoNazivu">
            <input type="text" name="naziv" hidden value="@fc.Naziv" />
            <input type="submit" value="Detalji" />
        </form>
    </td>
    @if (true)
    {
        <td>
            <form action="~/Fitnes/UkloniFitnes">
                <input type="text" name="naziv" hidden value="@fc.Naziv" />
                <input type="submit" value="Ukloni" />
            </form>
        </td>
        <td>
            <form action="~/Fitnes/IzmeniFitnes">
                <input type="text" name="naziv" hidden value="@fc.Naziv" />
                <input type="submit" value="Izmeni" />
            </form>
        </td>
    }
</tr>
        }

    }
</table>
