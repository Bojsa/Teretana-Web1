@using NebojsaVasicTeretana2022_web1.Models
<head>
    <link rel="stylesheet" href="~/stil.css">
</head>
<p>@ViewBag.Greska</p>
@{ 
    Korisnik korisnik = (Korisnik)Session["kor"];
}
<form action="~/Korisnik/Izmeni" >
    <table>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Email</th>
            <th>Pol</th>
            <th>Korisnicko ime</th>
           
        </tr>
        @foreach(var k in KorisnikRepository.SviKorisnici())
        {
            if(k.Uloga==Uloga.trener && !k.KorisnickoIme.Contains("_Blokiran") && korisnik.Vlasnistvo.Contains(k.RadnoMesto))
                {
                <tr>
                    <td>@k.Ime</td>
                    <td>@k.Prezime</td>
                    <td>@k.Email</td>
                    <td>@k.Pol.ToString()</td>
                    <td>@k.KorisnickoIme</td>
                    <td>
                        <form action="~/Korisnik/Blok">
                            <input type="text" value="@k.KorisnickoIme" hidden name="korisnickoIme" />
                            <input type="submit" value="Blokiraj"/>
                        </form>
                    </td>
                </tr>
                }
            
            }
    </table>
</form>


